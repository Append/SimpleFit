<style>
.client {
  border: 1px solid black;
}

</style>
<div class="wrap">
  <h1>Dietitian Home Page</h1>
  <h2>Alerts</h2>
  <a href="alerts">View client progress alerts</a>

  <h2>Client List</h2>
  <ul class="row-fluid block-grid-3">
    {{#each model as |client|}}
      <li class="client">
        <h4>{{client.firstName}} {{client.lastName}}</h4>
        <img src="{{client.photo}}" height="120" widtch="120">
        <p>
          Cool graphing and tracking and stuff
        </p>
        <a href="/vchat">Initiate Video Conference</a>
        <br>
        <a href="/users/{{client.url}}">User Profile</a>
      </li>
    {{/each}}
  </ul>
  <h2>Add Client</h2>
  <ul>
    <input type="button" value="Generate Pairing Code"/>
  </ul>
</div>

{{outlet}}
