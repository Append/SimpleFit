
{{#if (eq auth.user.basicprofile.membertype "dietitian")}}

{{!-- 
<button type="submit" class="btn" {{action "" client}}>Action</button>
     --}}

<div class="page-header">
  <h1>{{auth.user.basicprofile.firstname}} Home Page<br><small>Client List</small></h1>
</div>
<div class="row">
{{#each auth.user.basicprofile.dietitianprofile.dietitian as |client|}}
    <div class="col-xs-6 col-md-3">
      <div class="thumbnail">
        <img src="http://www.unomaha.edu/college-of-information-science-and-technology/_files/images/faculty/Profile%20Head%20Shots/Matt%20Hale.jpg" height="242" width="200">
        <div class="caption">
          <h3>{{client.basicinfo.firstname}} {{client.basicinfo.lastname}}</h3>
          <a href="/users/{{client.id}}">User Profile</a>
          <br>
          <!-- Trigger the modal with a button -->
          <p>{{client-actions prof=client isTrain=false}}</p>
        </div>
      </div>
    </div>
{{/each}}
</div>

{{else}}
<h2>You must login as dietitian to view dietitian clients</h2>

{{/if}}


{{outlet}}
